{
    "compilerOptions": {
      "outDir": "./out",
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",
      "emitDecoratorMetadata": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "jsx": "preserve",
      "lib": ["es5", "es2015", "es6", "es7", "esnext", "dom", "scripthost"],
      "module": "esnext",
      "noImplicitReturns": true,
      "noImplicitAny": true,
      "noUnusedLocals": true,
      "moduleResolution": "node",
      "preserveConstEnums": true,
      "pretty": true,
      "removeComments": true,
      "sourceMap": true,
      "strict": true,
      "strictNullChecks": true,
      "strictPropertyInitialization": false,
      "target": "es5"
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "src/**/*.vue"
    ]
  }
